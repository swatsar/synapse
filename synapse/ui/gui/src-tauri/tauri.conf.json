{
  "package": {
    "productName": "Synapse Configurator",
    "version": "3.1.0"
  },
  "tauri": {
    "security": {
      "csp": "default-src 'self'; connect-src 'self' http://localhost:8000 ws://localhost:8000; img-src 'self' data:; style-src 'self' 'unsafe-inline'"
    },
    "windows": [
      {
        "title": "Synapse Configurator",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "bundle": {
      "active": true,
      "targets": ["deb", "rpm", "appimage", "msi", "dmg"],
      "identifier": "org.synapse.configurator",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "category": "Utility",
      "shortDescription": "Synapse Agent Platform Configurator",
      "longDescription": "Cross-platform GUI configurator for Synapse autonomous agent platform",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "allowlist": {
      "all": false,
      "shell": {
        "open": true
      },
      "dialog": {
        "open": true,
        "save": true
      },
      "fs": {
        "readFile": true,
        "writeFile": true,
        "readDir": true,
        "exists": true,
        "scope": ["$APP/*", "$HOME/.synapse/*"]
      },
      "http": {
        "request": true,
        "scope": ["http://localhost:8000/**"]
      },
      "notification": {
        "all": true
      }
    }
  },
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev"
  }
}
